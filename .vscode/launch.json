{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "[MODEL API] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runapi", "--reload", "--deployment-key", "local", "--deployment-instance", "0"]
        },
        {
            "name": "[TUNER API] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runapi", "--reload", "--host", "localhost", "--port", "8001"]
        },
        {
            "name": "[MODEL CLI BUILD] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runmodel", "UNI", "--build", "--no-predict", "--no-include-signals"]
        },
        {
            "name": "[MODEL CLI PREDICT] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runmodel", "UNI", "--no-build", "--predict", "--no-include-signals"]
        },
        {
            "name": "[MODEL CLI SIGNALS] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runmodel", "UNI", "--no-build", "--predict", "--include-signals"]
        },
        {
            "name": "[TUNER CLI] Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["runonce", "AVAX"]
        },
        {
            "name": "Python: debugpy Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "port": 7777,
                "host": "127.0.0.1",
            },
            "justMyCode": false,
            "redirectOutput": true,
            "logToFile": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
            // "debugAdapterPath": "${workspaceFolder}/src/debugpy/adapter",
        }
    ]
}